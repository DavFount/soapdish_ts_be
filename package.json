{
  "name": "soapdish_be",
  "version": "1.0.0",
  "description": "The SOAP Dish Bible Study",
  "main": "index.ts",
  "directories": {
    "test": "test"
  },
  "imports": {
    "#configs/*": {
      "default": "./src/config/*"
    },
    "#controllers/*": {
      "default": "./src/controllers/*"
    },
    "#middleware/*": [
      "./src/middleware/*"
    ],
    "#models/*": {
      "default": "./src/models/*"
    },
    "#services/*": {
      "default": "./src/services/*"
    },
    "#utils/*": {
      "default": "./src/utils/*"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/index.ts",
    "ext": "ts, js"
  },
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "nodemon",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DavFount/pos_be.git"
  },
  "author": "David Fountain <davfount@gmail.com> (https://github.com/davfount)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DavFount/pos_be/issues"
  },
  "homepage": "https://github.com/DavFount/pos_be#readme",
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^7.5.1",
    "nodemon": "^3.0.1",
    "uuid": "^9.0.1",
    "validatorjs": "^3.22.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/crypto-js": "^4.1.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/lodash": "^4.14.198",
    "@types/node": "^20.6.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.4",
    "@types/validatorjs": "^3.15.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
